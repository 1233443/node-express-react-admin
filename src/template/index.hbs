<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheent" href="//cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.css" />	
  {{#if htmlWebpackPlugin.options.isWebpack}}
  <title>{{htmlWebpackPlugin.options.title}}</title>
  {{else}}
  {{{title}}}
  {{{meta}}}
  {{{link}}}
  {{{script}}}
  {{#each assets.styles}}
    <link href="{{this}}" rel="stylesheet">
  {{/each}}
  {{/if}}
</head>
<body>
  {{#if htmlWebpackPlugin.options.isWebpack}}
  <div id="container" class="container"></div>
  {{else}}
  <div id="container" class="container">{{{body}}}</div>
  <script>window.__INITIAL_STATE__ = {{{state}}}</script>
  <script type="text/javascript" src="{{{assets.javascript.main}}}"></script>
  {{/if}}
</body>
</html>
